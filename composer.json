{
  "name": "genius257/html",
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Genius257\\Html\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Anders Pedersen"
    }
  ],
  "require-dev": {
    "phpstan/phpstan": "^1.10",
    "pestphp/pest": "^2.17",
    "pestphp/pest-plugin-type-coverage": "^2.2"
  },
  "scripts": {
    "test": "pest",
    "phpstan": "phpstan",
    "pest-type-coverage": "./vendor/bin/pest --type-coverage --min=100",
    "pest-coverage": "php -d xdebug.mode=coverage ./vendor/bin/pest --coverage"
  },
  "autoload-dev": {
    "psr-4": {
      "Views\\": "views/",
      "Components\\": "components/"
    }
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
